{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "React",
    "module": "commonjs",
    "noImplicitAny": false,
    "lib": [
      "dom",
      "es5",
      "ES2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
